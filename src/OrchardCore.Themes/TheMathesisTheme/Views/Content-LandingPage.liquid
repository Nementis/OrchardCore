{% zone "HeadMeta" %}
	<title>{{Site.SiteName}} - {{Model.ContentItem.Content.TitlePart.Title}}</title>
	{% if Model.ContentItem.Content.AutoroutePart.SetHomepage %}
		<link rel="canonical" href="https://www.mathesis.it" />
	{% endif %}
{% endzone %}

{% shape "menu", alias: "alias:site-menu", cache_id: "site-menu", cache_tag: "alias:site-menu" %}

{% if Model.Content.LandingHeader %}
	{{ Model.Content.LandingHeader | shape_render }}
{% endif %}


<div class="main main-raised" id="main">
	<div class="container-fluid p-5">
		<div class="text-center pt-4">
			{% render_section "TopBanner", required: false %}
		</div>
		<div class="text-center">
			<h2 class="mth-section-title">{{ Model.ContentItem.Content.LandingHeader.Header.Text }}</h2>
		</div>
		<div class="w-90 mx-auto">
			{{ Model.ContentItem.Content.LandingPage.Description.Html | raw }}
		</div>
		{{ Model.Content.ListPart | shape_render }}
	</div>
</div>