{% zone "HeadMeta" %}
	<title>{{Site.SiteName}} - {{Model.ContentItem.Content.TitlePart.Title}}</title>
{% endzone %}

{% if Model.ContentItem.Content.LocalizationPart.Culture == "it-IT" %}
	{% shape "menu", alias: "alias:it-IT-site-menu", cache_tag: "it-IT-site-menu" %}
{% endif %}

{% if Model.ContentItem.Content.LocalizationPart.Culture == "en-US" %}
	{% shape "menu", alias: "alias:en-US-site-menu", cache_tag: "en-US-site-menu" %}
{% endif %}

{% if Model.Content.LandingHeader %}
	{{ Model.Content.LandingHeader | shape_render }}
{% endif %}

<div class="main main-raised" id="main">
	<div class="container-fluid p-5">
		<div class="text-center pt-4">
			{% render_section "TopBanner", required: false %}
		</div>
		<div class="text-center">
			<h2 class="mth-section-title">{{ Model.ContentItem.Content.LandingHeader.Header.Text }}</h2>
		</div>
		<div class="w-90 mx-auto">
			<p class="mth-text-base">{{ Model.ContentItem.Content.Magazine.Description.Text | raw }}</p>
		</div>
		{{ Model.Content.ListPart | shape_render }}
	</div>
</div>